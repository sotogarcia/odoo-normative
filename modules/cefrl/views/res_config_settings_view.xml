<?xml version="1.0" encoding="UTF-8"?>

<odoo noupdate="0">

  <record id="res_config_settings_view_form" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit.cefrl</field>
    <field name="model">res.config.settings</field>
    <field name="priority" eval="20"/>
    <field name="inherit_id" ref="base.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//form" position="inside">
        <app string="CEFR Levels" name="cefr" groups="base.group_system">

          <!-- Settings block: begin -->
          <block title="Common European Framework of Reference for Languages" name="cefrl_framework">

            <setting string="Level groups" help="Level groups: Main classification.">
              <div class="content-group mt8">
                <button name="%(cefrl.action_cefrl_level_group_act_window)d"
                  string="&#160;Update level groups" type="action" class="oe_link"
                  icon="fa-arrow-right"/>
              </div>
            </setting>

            <setting string="Levels" help="Levels: Secondary classification.">
              <div class="content-group mt8">
                <button name="%(cefrl.action_cefrl_level_act_window)d" string="&#160;Update levels"
                  type="action" class="oe_link" icon="fa-arrow-right"/>
              </div>
            </setting>

          </block>
          <!-- Settings block: end -->

          <!-- Settings block: begin -->
          <block title="Language-specific scales" name="cefrl_block_specific_scales">

            <setting string="Language certificate groups"
              help="Certificate groups issued by the competent organizations.">
              <div class="content-group mt8">
                <button name="%(cefrl.action_language_certificate_group_act_window)d"
                  string="&#160;Update certificate groups" type="action" class="oe_link"
                  icon="fa-arrow-right"/>
              </div>
            </setting>

            <setting string="Language certificates"
              help="Certificates issued by the competent organizations.">
              <div class="content-group mt8">
                <button name="%(cefrl.action_language_certificate_act_window)d"
                  string="&#160;Update certificates" type="action" class="oe_link"
                  icon="fa-arrow-right"/>
              </div>
            </setting>

          </block>
          <!-- Settings block: end -->

          <!-- Settings block: begin -->
          <block title="Languages" name="cefrl_languages">

            <setting string="Languages" help="Languages included in Common European Framework.">
              <div class="content-group mt8">
                <button name="%(cefrl.action_cefrl_language_act_window)d"
                  string="&#160;Update languages" type="action" class="oe_link"
                  icon="fa-arrow-right"/>
              </div>
            </setting>

          </block>
          <!-- Settings block: end -->

        </app>
      </xpath>

    </field>
  </record>

</odoo>
